{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>About Page</h1>

                <p>Template Data: {{index .StringMap "test"}}</p>
                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is: {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP addresss. Visit the <a href="/">Home Page</a> so I can set it.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}